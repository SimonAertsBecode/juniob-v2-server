# Juniob V2 - Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL="postgresql://postgres:password@localhost:5432/juniob_v2?schema=public"

# ===========================================
# SERVER
# ===========================================
PORT=3001
NODE_ENV=development

# ===========================================
# JWT AUTHENTICATION
# ===========================================
JWT_ACCESS_SECRET=your-access-token-secret-here
JWT_REFRESH_SECRET=your-refresh-token-secret-here
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# ===========================================
# STRIPE PAYMENTS
# ===========================================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PRICE_ID_1_CREDIT=price_xxx
STRIPE_PRICE_ID_10_CREDITS=price_xxx
STRIPE_PRICE_ID_25_CREDITS=price_xxx

# ===========================================
# OPENAI (Two-Tier AI Analysis)
# ===========================================
OPENAI_API_KEY=sk-your-openai-api-key

# ===========================================
# GITHUB APP OAUTH
# ===========================================
GITHUB_APP_ID=your-github-app-id
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\nyour-private-key\n-----END RSA PRIVATE KEY-----"

# ===========================================
# EMAIL (NodeMailer SMTP)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM="Juniob <noreply@juniob.com>"

# ===========================================
# FRONTEND URL (for email links)
# ===========================================
FRONTEND_URL=http://localhost:5173
